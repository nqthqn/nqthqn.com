:root{--theme: #59f0aa;--font1: 'Helvetica Neue', Helvetica, Arial, sans-serif;--font2: Palatino, Garamond, Georgia, serif}body{font-family:var(--font1);font-size:2em;line-height:1.2em;height:100vh;margin:0;text-rendering:optimizeLegibility}header{align-items:center;display:flex;justify-content:center;height:100vh}@media(max-width:600px){header{flex-direction:column-reverse;text-align:center}body{font-size:1.5em}}p{box-sizing:border-box;padding:10px;max-width:700px}em{font-size:.5em;color:#888}strong{font-family:var(--font2)}a{background:linear-gradient(to bottom,var(--theme) 0%,var(--theme) 100%);background-position:0 100%;background-repeat:repeat-x;background-size:4px 4px;color:#000;text-decoration:none;transition:background-size .2s}a:hover{background-size:4px 50px}ol{padding-left:4em}ol li{counter-increment:step-counter;list-style-type:none;position:relative}ol li:before{content:counter(step-counter);margin-right:1em;line-height:1;background-color:var(--theme);box-shadow:.2em .2em 0 rgba(128,128,128,.2);color:#fff;padding:2px 0;width:2.2em;height:1.2em;display:block;position:absolute;box-sizing:border-box;margin-left:-67px;margin-top:-3px;top:5px;text-align:center;font-size:.9em;font-style:normal;font-family:var(--font1);font-variant-numeric:lining-nums;-moz-font-feature-settings:lnum;-webkit-font-feature-settings:"lnum";font-feature-settings:"lnum"}li:nth-of-type(2n+2):before{transform:rotate(-2deg)}li{font-size:1em;font-weight:600;text-align:left;font-variant-ligatures:common-ligatures,contextual;text-rendering:optimizeLegibility;hanging-punctuation:first}li{margin-bottom:.5em}main{max-width:900px;padding:16px;margin:0 auto}main p{font-size:1em}main h1{font-family:var(--font2)}